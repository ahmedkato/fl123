<?php
	$frontController = Zend_Controller_Front::getInstance();
	$module = $frontController->getRequest()->getModuleName();
	$controller = $frontController->getRequest()->getControllerName();
	$action = $frontController->getRequest()->getActionName();
	$group_id = $frontController->getRequest()->getParam('group_id');
	$country_id = $frontController->getRequest()->getParam('country_id');
	$state_id = $frontController->getRequest()->getParam('state_id');
	$city_id = $frontController->getRequest()->getParam('city_id');
	$icao_code = $frontController->getRequest()->getParam('icao_code');
	$iata_code = $frontController->getRequest()->getParam('iata_code');
	$airport_name = $frontController->getRequest()->getParam('airport_name');
$translator = Zend_Registry::get('translator');
?>

<?php echo $translator->translator('pagination_results'); ?> <?php echo $this->currentItemCount; ?> - <?php echo $this->current; ?> <?php echo $translator->translator('pagination_of'); ?> <?php echo $this->last; ?>
<div class="page-no">
	<?php if (isset($this->previous)): ?><a href="<?php echo $this->url(array('module' => $module,'controller' => $controller,'action' => $action,'group_id' => $group_id,'country_id' => $country_id, 'state_id' => $state_id, 'city_id' => $city_id, 'icao_code' => $icao_code, 'iata_code' => $iata_code, 'airport_name' => $airport_name,'page' => $this->previous),'adminrout',true); ?>"><</a><?php else: ?><<?php endif; ?> 
	<!-- Numbered page links -->
			<?php foreach ($this->pagesInRange as $page): ?>
				<?php if ($page != $this->current): ?>
					<a href="<?php echo $this->url(array('module' => $module,'controller' => $controller,'action' => $action,'group_id' => $group_id,'country_id' => $country_id, 'state_id' => $state_id, 'city_id' => $city_id, 'icao_code' => $icao_code, 'iata_code' => $iata_code, 'airport_name' => $airport_name,'page' => $page),'adminrout',true); ?>">[<?php echo $page; ?>]</a>
				<?php else: ?>
					<?php echo $page; ?>
				<?php endif; ?>
			<?php endforeach; ?>
			<!-- Next page link -->
	<?php if (isset($this->next)): ?><a href="<?php echo $this->url(array('module' => $module,'controller' => $controller,'action' => $action,'group_id' => $group_id,'country_id' => $country_id, 'state_id' => $state_id, 'city_id' => $city_id, 'icao_code' => $icao_code, 'iata_code' => $iata_code, 'airport_name' => $airport_name,'page' => $this->next),'adminrout',true); ?>">></a><?php else: ?>><?php endif; ?>
</div>